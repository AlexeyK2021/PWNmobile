            type: integer
            format: int64
      requestBody:
        description: Update a message
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Message'
        required: true
            
      responses:
        '200':
          description: successful operation
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Message'
        '405':
          description: Invalid input
    
    delete: 
      tags:
        - message
