      summary: Add new message
      requestBody:
        description: Create a new chat
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Message'
        required: true
            
      responses:
        '200':
          description: successful operation
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Message'
        '405':
          description: Invalid input
          
